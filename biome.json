{
	"$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"app/**/*",
			"tests/**/*",
			"server.ts",
			"postcss.config.js",
			"svgo.config.cjs",
			"svgr.config.cjs",
			"playwright.config.ts",
			"react-router.config.ts",
			"vite.config.ts",
			"wrangler.toml",
			"!!**/node_modules",
			"!!**/build",
			"!!**/public/build",
			"!!**/functions",
			"!!**/*.config.js",
			"!!**/*.config.cjs",
			"!!**/*.config.mjs",
			"!!**/*.config.ts",
			"!!**/remix.env.d.ts",
			"!!**/app/styles/styles.css",
			"!!**/app/styles/styles.css.map"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"useUniqueElementIds": "off",
				"useExhaustiveDependencies": "off",
				"noUnknownFunction": "off",
				"noMissingVarFunction": "off"
			},
			"style": {
				"useConst": "error",
				"noDescendingSpecificity": "off",
				"useExponentiationOperator": "off"
			},
			"complexity": {
				"noImportantStyles": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noRedeclare": "off",
				"noArrayIndexKey": "off",
				"noShadowRestrictedNames": "off",
				"noUnknownAtRules": "off",
				"noDuplicateProperties": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "es5"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "tab"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
